@model MyLinks.Models.LinksViewModel

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h3>Save a web page</h3>
            </div>
            <div class="card-body">
                <form asp-controller="Links" asp-action="CreateLink" method="post">
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input asp-for="Title" class="form-control" type="text" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Url</label>
                        <input asp-for="Url" class="form-control" type="url" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>